<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eaeaea">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView android:id="@+id/item_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:text="position"/>

        <TextView android:id="@+id/item_posietion"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:text=""/>
        <TextView android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:text="name"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.example.helenwang.ivote.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_picture"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/bill"
            android:scaleType="fitCenter"
            android:padding="0dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView android:id="@+id/item_partyhard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:text="Party:"/>

                <TextView android:id="@+id/item_party"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:text="party"/>


            </LinearLayout>



            <TextView android:id="@+id/item_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:text="email"/>

            <TextView android:id="@+id/item_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="website"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_tweet_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tweet"
            android:layout_gravity="left"/>

        <TextView android:id="@+id/item_textView0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:gravity="left"
            android:text="" />

        <TextView android:id="@+id/item_tweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000"
            android:text="NTSB just announced it will search again for El Faroâ€™s missing data recorder. http://bit.ly/1PPOodK "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="10dp">
    </LinearLayout>
</LinearLayout>